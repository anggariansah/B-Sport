<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar_owner"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Login Owner">

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/kotak_orange"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar_owner"
        android:background="@color/colorPrimary"
        android:gravity="center">

        <ImageView
            android:id="@+id/vector1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/vector_futsal" />

        <ImageView
            android:id="@+id/vector2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/vector1"
            android:layout_toRightOf="@+id/vector1"
            android:src="@drawable/vector_badminton" />

        <ImageView
            android:id="@+id/vector3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/vector2"
            android:layout_toRightOf="@+id/vector2"
            android:src="@drawable/vector_basketball" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kotak_orange"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-30dp"
        android:background="#fff">

        <EditText
            android:id="@+id/email_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_round_grey"
            android:drawableEnd="@drawable/mail_icon"
            android:drawableRight="@drawable/mail_icon"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:textAppearance="?android:textAppearanceMedium" />

        <EditText
            android:id="@+id/password_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_owner"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_round_grey"
            android:drawableEnd="@drawable/password_icon"
            android:drawableRight="@drawable/password_icon"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:textAppearance="?android:textAppearanceMedium" />

        <Button
            android:id="@+id/btn_ownerlgn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_owner"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_round_orange2"
            android:text="@string/login"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/text_atau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_ownerlgn"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:text="@string/atau"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/colorPrimary" />

        <ImageView
            android:id="@+id/garis_kiri"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignBottom="@+id/text_atau"
            android:layout_alignLeft="@+id/fb_button"
            android:layout_alignStart="@+id/fb_button"
            android:layout_alignTop="@+id/text_atau"
            android:layout_toLeftOf="@+id/text_atau"
            android:layout_toStartOf="@+id/text_atau"
            android:src="@drawable/garis_orange" />

        <ImageView
            android:id="@+id/garis_kanan"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignBottom="@+id/text_atau"
            android:layout_alignEnd="@+id/fb_button"
            android:layout_alignRight="@+id/fb_button"
            android:layout_alignTop="@+id/text_atau"
            android:layout_toEndOf="@+id/text_atau"
            android:layout_toRightOf="@+id/text_atau"
            android:src="@drawable/garis_orange" />

        <Button
            android:id="@+id/fb_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_atau"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_round_blue"
            android:drawableLeft="@drawable/fb_icon"
            android:drawableStart="@drawable/fb_icon"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/login_fb"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#fff" />

        <Button
            android:id="@+id/gmail_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fb_button"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_round_red"
            android:drawableLeft="@drawable/gmail_icon"
            android:drawableStart="@drawable/gmail_icon"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="@string/login_gmail"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#fff" />

    </RelativeLayout>

</RelativeLayout>
